        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TCLyThuyet)
            @Html.ValidationMessageFor(model => model.TCLyThuyet)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TCThucHanh)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TCThucHanh)
            @Html.ValidationMessageFor(model => model.TCThucHanh)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.MonThiNghiem)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MonThiNghiem)
            @Html.ValidationMessageFor(model => model.MonThiNghiem)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.KhoaXepLich, "khoa")
        </div>
