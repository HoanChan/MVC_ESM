@model Mvc_ESM.Models.sinhvien
@{
    ViewBag.Title = "Sinh viên";
}

<h2>Sửa @ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaSinhVien)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaSinhVien)
            @Html.ValidationMessageFor(model => model.MaSinhVien)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ho)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ho)
            @Html.ValidationMessageFor(model => model.Ho)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ten)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ten)
            @Html.ValidationMessageFor(model => model.Ten)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Phai)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Phai)
            @Html.ValidationMessageFor(model => model.Phai)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.NgaySinh)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NgaySinh)
            @Html.ValidationMessageFor(model => model.NgaySinh)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.NoiSinh)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.NoiSinh)
            @Html.ValidationMessageFor(model => model.NoiSinh)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Lop, "Lớp")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Lop", ViewBag.Lop as SelectList, Model.Lop, new { id = "LopList" })
            @Html.ValidationMessageFor(model => model.Lop)
        </div>

        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
