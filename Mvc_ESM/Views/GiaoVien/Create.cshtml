@model Mvc_ESM.Models.giaovien
@{
    ViewBag.Title = "Giáo viên";
}

<h2>Tạo mới @ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewBag.Title</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaGiaoVien)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaGiaoVien)
            @Html.ValidationMessageFor(model => model.MaGiaoVien)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.TenGiaoVien)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TenGiaoVien)
            @Html.ValidationMessageFor(model => model.TenGiaoVien)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.BoMonQL, "Bộ môn")
        </div>
        <div class="editor-field">
            @Html.DropDownList("BoMonQL", String.Empty)
            @Html.ValidationMessageFor(model => model.BoMonQL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HoLot)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HoLot)
            @Html.ValidationMessageFor(model => model.HoLot)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HocHam)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HocHam)
            @Html.ValidationMessageFor(model => model.HocHam)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.HocVi)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.HocVi)
            @Html.ValidationMessageFor(model => model.HocVi)
        </div>

        <p>
            <input type="submit" value="Tạo" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Quay lại danh sách", "Index")
</div>
