<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery.js")" type="text/javascript" lang="javascript" ></script>
    <script src="@Url.Content("~/Scripts/Menu/jquery.color.js")" type="text/javascript" lang="javascript" ></script>
    <script src="@Url.Content("~/Scripts/Menu/jquery.easing.js")" type="text/javascript" lang="javascript" ></script>
    <script src="@Url.Content("~/Scripts/Menu/jquery.lavalamp.js")" type="text/javascript" lang="javascript" ></script>
    <link href="@Url.Content("~/Content/Menu/menu.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/Menu/menu.js")" type="text/javascript" lang="javascript" ></script>

</head>
<body>
    <div class="page">
        <header>
            <div id="title">
                <h1>My MVC Application</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <div id="menu">
                <ul class="menu">
                    <li><a href ="@Url.Action("Index", "Home")"><span>Home</span></a></li>
                    <li><a href ="@Url.Action("About", "Home")"><span>About</span></a></li>

                    <li><a href="#" class="parent"><span>Chỉnh sửa CSDL</span></a>
                        <ul>
                            <li><a href="@Url.Action("Index", "Subject")"><span>Môn Học</span></a></li>
                            <li><a href="@Url.Action("Index", "Teacher")"><span>Giáo viên</span></a></li>
                            <li><a href="@Url.Action("Index", "Student")"><span>Sinh viên</span></a></li>
                            <li><a href="@Url.Action("Index", "Room")"><span>Phòng học</span></a></li>
                        </ul>
                    </li>

                    <li><a href="#" class="parent"><span>Thiết lập đầu vào</span></a>
                        <ul>
                            <li><a href="@Url.Action("Index", "SelectSubject")"><span>Chọn môn học</span></a></li>
                            <li><a href="@Url.Action("Index", "SelectStudent")"><span>Chọn sinh viên</span></a></li>
                            <li><a href="@Url.Action("Index", "SelectRoom")"><span>Chọn phòng thi</span></a></li>
                            <li><a href="@Url.Action("Index", "Options")"><span>Chọn thông số</span></a></li>
                        </ul>
                    </li>
                    
                    <li><a href="#" class="parent"><span>Xem kết quả</span></a>
                        <ul>
                            <li><a href="@Url.Action("Index", "RoomCalendarResult")"><span>Xem Phòng học</span></a></li>
                        </ul>
                    </li>
                    <li><a href ="@Url.Action("Index", "Calendar")"><span>Lịch</span></a></li>
                    <li class="last"><a href="#"><span>@@</span></a></li>
                </ul>
            </div>

        </header>
        <section id="main">
            @RenderBody()
        </section>
        <footer>
        </footer>
    </div>
</body>
</html>
