@model IEnumerable<Model.sinhvien>
@{
    ViewBag.Title = "Danh sách sinh viên thi theo môn học";
}

<h2>@ViewBag.Title</h2>

@Html.Partial("_DataTable.Lib")
@Html.Partial("_DataTable.Printer.Lib")

@using (Html.BeginForm("StudentsOfSubjects", "CalendarResults", FormMethod.Post, new { @id = "FilterForm" }))
{
    <p>
        <p>
            Mã môn học: @Html.TextBox("MonHoc", Mvc_ESM.Static_Helper.SubjectHelper.SearchString, new { id = "SearchString" })
            <input type="submit" value="Thực hiện" />
        </p>
    </p>
}

<table id="table">
    <thead>
        <tr>
            <th>Mã sinh viên
            </th>
            <th>Họ
            </th>
            <th>Tên
            </th>
            <th>Ngày Sinh
            </th>
            <th>Lớp
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaSinhVien)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ho)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgaySinh)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lop)
                </td>
            </tr>
        }
    </tbody>
</table>

<link href="@Url.Content("~/Content/TableThemes/table_jui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/TableThemes/smoothness/jquery-ui-1.8.4.custom.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.dataTables.js")" type="text/javascript" lang="javascript" ></script>


<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var oTable = $('#table').dataTable({
            "aoColumnDefs": [
                { "bSortable": false, "aTargets": [0] },
                { "bSortable": false, "aTargets": [1] },
                { "bSortable": false, "aTargets": [2] },
                { "bSortable": false, "aTargets": [3] },
                { "bSortable": false, "aTargets": [4] }
            ], // không hiện nút sắp xếp!
            "aaSorting": [[2, 'asc']], //Xếp cột thứ 3
            "bStateSave": true,
            "sDom": 'T<"clear"><"fg-toolbar ui-widget-header ui-corner-tl ui-corner-tr ui-helper-clearfix"lfr>t<"fg-toolbar ui-widget-header ui-corner-bl ui-corner-br ui-helper-clearfix"ip>',
            "oTableTools": {
                "sSwfPath": "@Url.Content("~/Content/copy_csv_xls.swf")",
                "aButtons": ["copy", "xls", "PrintBtn"]
            },
            @Html.Partial("_DataTable")
        });
    });
</script>
