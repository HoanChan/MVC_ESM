@model IEnumerable<Model.phong>
@{
    ViewBag.Title = "Phòng học";
}

<h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Tạo mới", "Create")
</p>

<link href="@Url.Content("~/Content/TableThemes/table_jui.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/TableThemes/page.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/UI/jquery-ui.js")" type="text/javascript" lang="javascript" ></script>
<link href="@Url.Content("~/Content/ui-lightness/jquery-ui.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")" type="text/javascript" lang="javascript" ></script>

@using (Html.BeginForm("Index", "Room", FormMethod.Post, new { @id = "FilterForm" }))
{
    <p>
        <p>
            @*Phòng: @Html.DropDownList("Phong", ViewBag.Phong as SelectList, new { id = "RoomList" })*@
            Phòng: @Html.TextBox("Phong", Mvc_ESM.Static_Helper.RoomHelper.MaPhong)
            <input type="submit" value="Thực hiện" />
        </p>

    </p>
}

<script type="text/javascript">
    $(document).ready(function () {

        $('#table tbody td button#Deletebtn').button({
            icons: {
                primary: "ui-icon-trash"
            }
        }).live('click', function () {
            var id = $(this).attr("value");
            var aDialog = $("#dialog-confirm");
            aDialog.removeAttr("style");
            aDialog.dialog({
                resizable: false,
                modal: true,
                buttons: {
                    "Xóa": function () {
                        $.post("/Room/Delete", "id=" + id, function (data) {
                            alert(data);
                            if (data == "Xoá thành công!")
                                window.location = "@Url.Action("Index", "Room")";
                        });
                        $(this).dialog("close");
                    },
                    "Không": function () {
                        $(this).dialog("close");
                    }
                }
            });
        });


        $('#table tbody td button#Modifybtn').button({
            icons: {
                primary: "ui-icon-pencil"
            }
        }).live('click', function () {
            var id = $(this).attr("value");
            window.location = '@Url.Action("Edit","Room")' + "/" + id;
        });


    });
</script>

<table id="table">
    <thead>
        <tr>
            <th>Mã phòng
            </th>
            <th>Kích thước
            </th>
            <th>Khoa
            </th>
            <th>Sức chứa
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaPhong)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KichThuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.khoa.TenKhoa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SucChua)
                </td>
                <td>
                    @*@Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                    <button id="Modifybtn" value="@item.MaPhong">Sửa</button> | 
                    <button id="Deletebtn" value="@item.MaPhong">Xóa</button>

                </td>
            </tr>
        }
    </tbody>
</table>

<div id="dialog-confirm" title="Xóa dữ liệu?" style="visibility: hidden">
    <p><span class="ui-icon ui-icon-alert" style="float: left; margin: 0 7px 20px 0;"></span>Bạn có muốn xoá dữ liệu này không?</p>
</div>

@Html.Partial("_DataTable.Lib")


<script type="text/javascript" charset="utf-8">
    $(document).ready(function () {
        var oTable = $('#table').dataTable({
            @Html.Partial("_DataTable")
        });
        new FixedHeader(oTable);
    });
</script>

