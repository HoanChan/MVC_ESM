@model Model.phong

@{
    ViewBag.Title = "Phòng học";
}

<h2>Sửa @ViewBag.Title</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>@ViewBag.Tilte</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.MaPhong)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.MaPhong)
            @Html.ValidationMessageFor(model => model.MaPhong)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.KichThuoc)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.KichThuoc)
            @Html.ValidationMessageFor(model => model.KichThuoc)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.KhoaQL, "Khoa")
        </div>
        <div class="editor-field">
            @Html.DropDownList("Khoa quản lý", String.Empty)
            @Html.ValidationMessageFor(model => model.KhoaQL)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.SucChua)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SucChua)
            @Html.ValidationMessageFor(model => model.SucChua)
        </div>

        <p>
            <input type="submit" value="Lưu" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
